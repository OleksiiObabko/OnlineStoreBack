{
  "plugins": ["@stylistic"],
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "space-before-function-paren": "off",
    "object-shorthand": "error",
    "no-unused-vars": "warn",
    "no-useless-escape": "off",
    "no-multiple-empty-lines": "error"
  }
}
